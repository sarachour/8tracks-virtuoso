{
  "manifest_version": 2,

  "name": "8Tracks Virtuoso",
  "description": "An unobtrusive and powerful player for listening to 8tracks mixes. Also supports exporting tracks to Spotify and plaintext.",
  "version": "1.12",

  "permissions": [
	  "storage",
     "tabs",
     "clipboardWrite",
     "webNavigation"
	],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["scripts/lib/jquery-1.10.2.js", "scripts/spotify.js", 
      "scripts/playlist.js", "scripts/8tracks.js", "scripts/musicplayer.js"],
    "persistent": true
  }
}
